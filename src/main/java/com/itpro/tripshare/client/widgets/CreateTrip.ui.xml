<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.CreateTrip-Obj1 {
		float: left;
	}
	
	.CreateTrip-Obj2 {
		min-height: 500px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.CreateTrip-Obj2}">
		<g:HTMLPanel styleName="{style.CreateTrip-Obj1}">
			<g:Label text="Tên chuyến đi:" />
			<g:TextBox ui:field="txbName" />
			<g:Label text="Điểm đi:" />
			<g:TextBox ui:field="txbOrigin" />
			<g:Button ui:field="btnFindYourLocation">Tìm vị trí của bạn</g:Button>
			<g:Label text="Điểm đến:" />
			<g:TextBox ui:field="txbDestination" />
			<g:Button text="Chọn địa danh"></g:Button>
			<g:HTMLPanel ui:field="htmlDestinationBox" />
			<g:Anchor text="Thêm điểm đến" ui:field="btnAddPart" />
			<g:HTMLPanel>
				<g:Button>Upload ảnh</g:Button>
			</g:HTMLPanel>
			<g:Label text="Mô tả:" />
			<g:TextArea width="490px" height="120px" ui:field="txbDescription" />
			<g:HTMLPanel>
				<g:Button ui:field="btnCreateTrip">Tạo chuyến đi</g:Button>
			</g:HTMLPanel>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="mapContainer" height="500px" width="500px"
			styleName="{style.CreateTrip-Obj1}" />
	</g:HTMLPanel>
</ui:UiBinder> 