<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
	<ui:style>
	@external .PathDetail-Obj1, .PathDetail-Obj8, .PathDetail-Obj13, .PathDetail_Obj15;
	.PathDetail-Obj1 {
		opacity: 0;
		position: relative;
		border: 1px solid #a1a1a1;
		padding: 20px 20px;
		background-color: rgba(255, 255, 255, 0.9);
		height: auto !important;
		overflow: auto;
		/* -webkit-box-shadow: 1px 1px 2px 1px rgba(0, 0, 0, 0.25);
		-moz-box-shadow: 1px 1px 2px 1px rgba(0, 0, 0, 0.25);
		box-shadow: 1px 1px 2px 1px rgba(0, 0, 0, 0.25); */
		margin-bottom: 40px;
	}
	
	.PathDetail-Obj1 i{
		opacity: 0;
	}
	
	.PathDetail-Obj1:hover i {
		opacity: 1;	
	}
	
	.PathDetail-Obj1:hover .PathDetail-Obj8 {
		border-left: 1px solid silver;
	}
	
	.PathDetail-Obj2 {
		display: block;
		overflow: hidden;
		margin-bottom: 10px;
		/* display: inline-flex;
	  	display: -webkit-inline-box;
	  	display: -webkit-inline-flex;
	  	display: -ms-inline-flexbox;
	  	-webkit-align-self: auto; */
	  	padding: 5px;
	  	width: 100%;
	}
	
	.PathDetail-Obj3 {
		display: block;
		margin-bottom: 10px;
		font-size: 22px;
		font-family: museo-w01-700, serif;
		color: rgb(56, 119, 127) !important;
		cursor: pointer;
	}
	
	.PathDetail-Obj3:hover {
		text-decoration: underline;
	}
	
	.PathDetail-Obj4 {
		font-size: 15px;
		line-height: 1.8em;
		white-space: pre-line;
	}
	
	.PathDetail-Obj5 {
		font-size: 14px;
		font-family: museo-w01-700,serif; 
		color: gray; 
		font-style: italic;
		margin-bottom: 0px;
		margin-right: 4px;
		margin-top: 12px;
	}
	
	.PathDetail-Obj6 {
		font-size: 14px;
		font-family: museo-w01-700,serif; 
		color: cornflowerblue !important; 
		font-style: italic;
		margin-bottom: 0px;
		margin-top: 12px;
	}
	
	.PathDetail-Obj6:hover {
		cursor: pointer;
		text-decoration: underline;
		color: blue !important;
	}
	
	.PathDetail-Obj7 {
		display: inline-flex;
	  	display: -webkit-inline-box;
	  	display: -webkit-inline-flex;
	  	display: -ms-inline-flexbox;
	  	-webkit-align-self: auto;
	}
	
	.PathDetail-Obj8 {
		bottom: 20px;
  		right: 20px;
  		position: absolute;
		color: black !important;
		cursor: pointer;
		margin-top: 5px;
		padding-left: 10px;
	}
	
	.PathDetail-Obj8:hover {
		color: gray !important;
	}
	
	.PathDetail-Obj9 {
		font-size: 15px; 
		line-height: 1.6em; 
		/*
		display: block; 
		display: -webkit-box; 
		-webkit-line-clamp: 10;
		-webkit-box-orient: vertical; 
		text-overflow: ellipsis;
		max-height: 270px; 
		*/
		overflow: hidden;  
		margin-top: 15px; 
		margin-bottom: 30px;
	}
	
	.PathDetail-Obj10 {
		border: 1px silver solid;
		border-radius: 20px;
		overflow: hidden;
		margin-left: 8px;
		margin-bottom: 15px;
	}
	
	.PathDetail-Obj11 {
		margin-left: 50px;
	}
	
	.PathDetail-Obj12 {
		bottom: 20px;
  		right: 20px;
  		position: absolute;
		color: black !important;
		cursor: pointer;
		margin-top: 5px;
	}
	
	.PathDetail-Obj12:hover {
		color: gray !important;
	}
	
	.PathDetail-Obj13 {
  		right: 62px;
	}
	
	.PathDetail_Obj14 {
  		position: absolute;
  		left: 0px;
  		top: -50px;
	}
	
	.PathDetail_Obj15 {
		float: left;
  		padding: 8px;
  		padding-bottom: 25px;
  		background: rgb(218, 215, 215);
  		margin-right: 10px;
	}
	
	.PathDetail_Obj16 {
  		font-size: 14px;
  		font-family: museo-w01-700, serif;
  		color: gray;
  		font-style: italic;
	}
	
	.PathDetail_Obj17 {
		margin-top: 20px;
		overflow: hidden;
	}
	
	.PathDetail_Obj18 {
		float: right;
	}
	
	.PathDetail_Obj19 {
		float: left;
		width: 360px;
  		white-space: nowrap;
  		overflow: hidden;
  		text-overflow: ellipsis;
	}
	
	.PathDetail_Obj20 {
		margin-right: 10px;
		display: inline-flex;
		display: -webkit-inline-box;
	  	display: -webkit-inline-flex;
	  	display: -ms-inline-flexbox;
	  	-webkit-align-self: auto;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.PathDetail-Obj1}">
		<g:Anchor ui:field="indexCatalog" styleName="{style.PathDetail_Obj14}"></g:Anchor>
		
		<g:Anchor styleName="{style.PathDetail-Obj3}" ui:field="lbTitle" />
		<g:HTMLPanel styleName="{style.PathDetail-Obj7}">
			<g:Label styleName="font-blackTitleLarge {style.PathDetail-Obj5}">Post by: </g:Label>
			<g:Anchor styleName="font-blackTitleLarge {style.PathDetail-Obj6}" ui:field="lbPoster"></g:Anchor>
			<g:Image styleName="{style.PathDetail-Obj10}" ui:field="imgPoster"></g:Image>
			<g:Label styleName="font-blackTitleLarge {style.PathDetail-Obj5} {style.PathDetail-Obj11}">on: </g:Label>
			<g:Label styleName="font-blackTitleLarge {style.PathDetail-Obj5}" ui:field="lbDatePost"></g:Label>
		</g:HTMLPanel>
		
		<g:HTMLPanel styleName="{style.PathDetail-Obj2}" ui:field="pictureTable" visible="false"></g:HTMLPanel>
		<!-- <g:Image styleName="{style.PathDetail-Obj2}" ui:field="picture"/> -->
		
		<g:HTMLPanel styleName="{style.PathDetail_Obj17}">
			<g:Label ui:field="txbLocation" styleName="font-blackTitleLarge {style.PathDetail_Obj16} {style.PathDetail_Obj19}"></g:Label>
			<g:HorizontalPanel styleName="{style.PathDetail_Obj18}">
				<g:HTMLPanel styleName="{style.PathDetail_Obj20}">
					<i style="opacity:1; color:gray; margin-top: 1px; margin-right: 3px;" class="fa fa-comment fa-lg"></i>
					<g:Label styleName="font-blackTitleLarge {style.PathDetail_Obj16}">0</g:Label>
				</g:HTMLPanel>
				<g:Label ui:field="txbPhotos" styleName="font-blackTitleLarge {style.PathDetail_Obj16}"></g:Label>	
			</g:HorizontalPanel>
		</g:HTMLPanel>
		
		<p ui:field="htmlContent" style="font-size: 14px; line-height: 1.6em; margin-bottom: 30px; text-align: justify; padding: 10px 5px"></p>
			
		<g:HTMLPanel ui:field="postControl">
			<g:Anchor ui:field="btnExpandACollapse" styleName="{style.PathDetail-Obj12}"><i style="position: relative; top: 2px;" class="boxbutton">Read more</i> </g:Anchor>
			<g:Anchor title="Delete this post" ui:field="btnDeletePost" styleName="PathDetail-Obj8"><i class="fa fa-trash fa-2x"></i></g:Anchor>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 